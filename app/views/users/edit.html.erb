<main>
  <p id="notice"></p>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>User info</h2>
    <div class="form-group">
      <% if @user.errors.any? %>
       <%= @user.errors.count %>error prohibited this obj from being saved:
        <ul>
         <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
        </ul>
      <% end %>
    </div>
    <%= form_with model: @user,  url:user_path(@user.id), method: :patch do |f| %>
      <label for="user_name">Name</label>
    <div class="form-group">
      <%= f.text_field :name, class:"form-control" %> 
    </div>
    <div class="form-group">
      <label for="user_image">Image</label>
    </div>
    <div>
      <%= f.file_field :profile_image, accept: "image/*", class:"form-control-file" %>
    </div>
    <div class="form-group">
      <label for="user_introduction">introduction</label>
    </div>
    <div>
      <%= f.text_field :introduction, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Update User" %>
    </div>
    <% end %>
</main>